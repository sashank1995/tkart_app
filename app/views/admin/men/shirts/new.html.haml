= form_for @mens_inventory, url: admin_men_shirts_path, method: :post, html: {multipart: true} do |f|
  = f.label :description
  = f.text_field :description
  %br/
  %br/
  = f.label :cost
  = f.number_field :cost
  %br/
  %br/
  %span.picture
    = f.file_field :picture, accept: 'image/jpeg,image/gif,image/png'
  = f.submit "Add", class: "btn btn-primary"
